<UserControl x:Class="BTL_UserControl2.UserControl.menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTL_UserControl2.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ribbon>
            <RibbonTab Header="home">
                <RibbonGroup Header="Clipboard">
                    <RibbonButton Label="paste"
                                  KeyTip="V"
                                  ToolTip="paste (Ctrl+V)" LargeImageSource="/icons/Paste.png"/>
                    <RibbonButton x:Name="btn_Cut" Label="Cut" SmallImageSource="/icons/Cut_32px.png"/>
                    <RibbonButton Label="Copy" SmallImageSource="/icons/Bookmark.png"/>
                    <RibbonButton Label="Delete" SmallImageSource="/icons/Delete.png"/>
                    
                </RibbonGroup>
                <RibbonGroup Header="Link">
                    <RibbonButton Label="Add Link" SmallImageSource="/icons/Add Link.png"/>
                    <RibbonCheckBox Label="Left" SmallImageSource="/icons/Left Arrow.png"/>
                    <RibbonCheckBox Label="Right" SmallImageSource="/icons/Right Arrow.png"/>
                    
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
            
    </Grid>
</UserControl>
