<UserControl x:Class="BTL_UserControl.UserControl1.BT1_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTL_UserControl.UserControl1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ribbon>
            <RibbonTab Header="Home">
                <RibbonGroup Header="ClipBroad">
                    <RibbonButton LargeImageSource="/icons/Cut_32px.png" Label="cut">
                        
                    </RibbonButton>
                    <RibbonRadioButton Label="Color 1" 
                                       SmallImageSource="/icons/Right Arrow.png"
                                       LargeImageSource="/icons/Right Arrow.png"
                                       KeyTip="C1"
                                       >
                    </RibbonRadioButton>
                    <RibbonRadioButton Label="color 2"
                                       SmallImageSource="/icons/Left Arrow.png"
                                       LargeImageSource="/icons/Left Arrow.png"
                                       KeyTip="C1"/> 
                    
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
            
    </Grid>
</UserControl>
